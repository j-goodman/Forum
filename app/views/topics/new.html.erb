<h1>New Thread</h1>

<form action="<%= topics_url %>" method="post">
  <%= auth_token %>
  <label>
    Title
    <input type="text" name="topic[title]" value="">
  </label>

  <input type="hidden" name="topic[user_id]" value="<%= current_user %>">

  <input type="submit" value="Submit">

  <br><br>

  <form action="<%= posts_url %>" method="post">
    <%= auth_token %>

    <label>
      First Post
      <br>
      <textarea rows="4" col="60" name="post[body]"></textarea>
    </label>

    <input type="hidden" name="post[topic_id]" value="<%= Topic.all.last.id+1 %>">

    <br>

  </form>

</form>
